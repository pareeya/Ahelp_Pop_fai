<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bglogin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pareeya.ahelp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_above="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#b6ebfdfd"
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.39"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:text="@string/user_name"
                android:textColor="@color/colorText"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/editText7"
                android:layout_width="223dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColor="@color/colorText"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.97"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:text="@string/number"
                android:textColor="@color/colorText"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/editText8"
                android:layout_width="222dp"
                android:layout_height="wrap_content"
                android:hint="081xxxxxxx"
                android:inputType="number"
                android:textColor="@color/colorText"
                android:textSize="12sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.08"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:text=" รหัสผ่าน :"
                android:textColor="@color/colorText"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/editText9"
                android:layout_width="215dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.16"
                android:hint="1234"
                android:inputType="text|textPassword"
                android:textColor="@color/colorText"
                android:textSize="12sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:text="ยืนยันรหัสผ่าน"
                android:textColor="@color/colorText"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/editText10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="@color/colorText"
                android:textSize="12sp"
                android:inputType="textPassword" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#1c6ab3"
        android:onClick="clickSaveData"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="@string/Login"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
